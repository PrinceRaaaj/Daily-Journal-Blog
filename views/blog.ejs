<%- include("partials/header") -%>

<section class="text-gray-500 bg-gray-900 body-font">
  <div class="container px-5 py-16 mx-auto flex flex-wrap items-center">
    <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
      <h1 class="title-font font-medium text-3xl text-white">Daily Journal</h1>
      <p class="leading-relaxed mt-4">Welcome to the Daily journal, you can create your own journal here. Just press the Compose button and get started with your blog</p>
    </div>
    <a href="/compose" class="lg:w-2/6 md:w-1/2 bg-gray-800 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
      <button class="text-white bg-red-500 border-0 py-2 px-8 focus:outline-none hover:bg-red-600 rounded text-lg">Compose</button>
    </a>
  </div>
</section>
<hr style="border: 0; height: 0; box-shadow: 0 0 10px 1px black;">
<section class="text-gray-500 bg-gray-900 body-font overflow-hidden">
  <div class="container px-5 py-16 mx-auto">
    <div>
      <% blogList.forEach((post)=>{ %>
        <div class="py-8 flex flex-wrap md:flex-no-wrap">
          <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
            <span class="tracking-widest font-medium title-font text-white py-10"><%= post.date %></span>
          </div>
          <div class="md:flex-grow">
            <h2 class="text-2xl font-medium text-white title-font mb-2"><%= post.title %></h2>
            <p class="leading-relaxed"><%= post.content.slice(0, 130) %> . . .</p>
            <a class="text-red-500 inline-flex items-center mt-4" href="/posts/<%= post._id %>">Read More
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<%- include("partials/footer") -%>
